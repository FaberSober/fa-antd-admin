{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Maven: Clean Package (Skip Tests)",
            "type": "shell",
            "command": "mvn",
            "args": [
                "clean",
                "package",
                "-Dmaven.test.skip=true"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "problemMatcher": {
                "owner": "maven",
                "fileLocation": ["relative", "${workspaceFolder}"],
                "pattern": {
                    "regexp": "^\\[ERROR\\]\\s+(.*):\\[([0-9]+),([0-9]+)\\]\\s+(.*)$",
                    "file": 1,
                    "line": 2,
                    "column": 3,
                    "message": 4
                }
            },
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "detail": "Clean and package the project without running tests"
        },
        {
            "label": "Maven: Clean",
            "type": "shell",
            "command": "mvn",
            "args": [
                "clean"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "problemMatcher": {
                "owner": "maven",
                "fileLocation": ["relative", "${workspaceFolder}"],
                "pattern": {
                    "regexp": "^\\[ERROR\\]\\s+(.*):\\[([0-9]+),([0-9]+)\\]\\s+(.*)$",
                    "file": 1,
                    "line": 2,
                    "column": 3,
                    "message": 4
                }
            },
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "detail": "Clean the project build artifacts"
        },
        {
            "label": "Maven: Package with Tests",
            "type": "shell",
            "command": "mvn",
            "args": [
                "clean",
                "package"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "problemMatcher": {
                "owner": "maven",
                "fileLocation": ["relative", "${workspaceFolder}"],
                "pattern": {
                    "regexp": "^\\[ERROR\\]\\s+(.*):\\[([0-9]+),([0-9]+)\\]\\s+(.*)$",
                    "file": 1,
                    "line": 2,
                    "column": 3,
                    "message": 4
                }
            },
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "detail": "Clean and package the project with tests"
        },
        {
            "label": "Maven: Test",
            "type": "shell",
            "command": "mvn",
            "args": [
                "test"
            ],
            "group": "test",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "problemMatcher": {
                "owner": "maven",
                "fileLocation": ["relative", "${workspaceFolder}"],
                "pattern": {
                    "regexp": "^\\[ERROR\\]\\s+(.*):\\[([0-9]+),([0-9]+)\\]\\s+(.*)$",
                    "file": 1,
                    "line": 2,
                    "column": 3,
                    "message": 4
                }
            },
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "detail": "Run all tests"
        }
    ]
}